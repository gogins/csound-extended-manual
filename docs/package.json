{
  "main": "index-frames.html",
  "name": "index-frames",
  "description": "HTML5 with Csound",
  "version": "0.1.0",
  "keywords": [ "Csound", "node-webkit" ],
  "nodejs": true,
  "node-remote": "http://<all-urls>/*",
  "window": {
    "title": "index-frames",
    "icon": "link.png",
    "toolbar": false,
    "frame": false,
    "maximized": true,
    "position": "mouse",
    "fullscreen": true
  },
  "webkit": {
    "plugin": true
  },
  "chromium-args": {
    "--enable-logging": true,
    "--v=1": 1,
    "--device-scale-factor": 4,
    "--alsa-input-device": "plughw:1,0",
    "--alsa-output-device": "plughw:1,0"
  }
}
